<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.nttr.reminder.EditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!--<TextView-->
        <!--android:id="@+id/border_line1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.4dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:background="#808080"-->
        <!--android:text="TextView" />-->

        <LinearLayout
            android:id="@+id/title_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_frame"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/title_image"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:background="@android:drawable/star_big_on"
                        android:backgroundTint="#000000" />

                    <TextView
                        android:id="@+id/title_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="タイトル"
                        android:textColor="#000000"
                        android:textSize="20sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/title_text"
                    style="@style/TitleEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="20sp"
                    android:theme="@style/TitleEditTextStyle" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_frame"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/content_image"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:tint="#A0522D"
                        android:tintMode="src_in"
                        app:srcCompat="@android:drawable/ic_menu_edit" />

                    <TextView
                        android:id="@+id/content_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="メモ"
                        android:textColor="#A0522D"
                        android:textSize="20sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/content_text"
                    style="@style/TitleEditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLength="120"
                    android:maxLines="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="20sp"
                    android:theme="@style/TitleEditTextStyle" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_frame"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:tint="#9932CC"
                    app:srcCompat="@android:drawable/ic_menu_manage" />

                <Switch
                    android:id="@+id/notification_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="通知設定"

                    android:textColor="#9932CC"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_time_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_frame"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/date_time_image"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:tint="#32CD32"
                    android:tintMode="src_in"
                    app:srcCompat="@android:drawable/ic_menu_recent_history" />

                <TextView
                    android:id="@+id/date_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="指定日時"
                    android:textColor="#32CD32"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/date_time_button"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:text="なし"
                        android:textAlignment="viewEnd"
                        android:textColor="#a4000000"
                        app:srcCompat="@mipmap/ic_launcher" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notification_sound_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_frame"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/notification_sound_image"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:tint="#FF69B4"
                    android:tintMode="src_in"
                    app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

                <TextView
                    android:id="@+id/notification_sound_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="通知音"
                    android:textColor="#FF69B4"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/notification_sound_button"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:text="なし >"
                        android:textAlignment="viewEnd"
                        android:textColor="#a4000000"
                        app:srcCompat="@mipmap/ic_launcher" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vibration_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_frame"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vibration_image"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:tint="#00BFFF"
                    android:tintMode="src_in"
                    app:srcCompat="@android:drawable/ic_menu_always_landscape_portrait" />

                <TextView
                    android:id="@+id/vibration_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="振動"
                    android:textColor="#00BFFF"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/vibration_button"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:text="なし >"
                        android:textAlignment="viewEnd"
                        android:textColor="#a4000000"
                        app:srcCompat="@mipmap/ic_launcher" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/repetition_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_frame"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/repetition_image"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:tint="#FFA500"
                    android:tintMode="src_in"
                    app:srcCompat="@android:drawable/ic_popup_sync" />

                <TextView
                    android:id="@+id/repetition_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="リピート"
                    android:textColor="#FFA500"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/repetition_button"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:text="なし >"
                        android:textAlignment="viewEnd"
                        android:textColor="#a4000000"
                        app:srcCompat="@mipmap/ic_launcher" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
